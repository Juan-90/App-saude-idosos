{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "target": "esnext",
    "lib": ["es6", "dom"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "node_modules/react-native/types/**/*.d.ts",
    "node_modules/@types/react/**/*.d.ts",
    "node_modules/@types/node/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
